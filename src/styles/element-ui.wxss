@charset "UTF-8";
.el-breadcrumb__inner,
.el-breadcrumb__inner a {
  font-weight: 500 !important;
}

.el-input__inner {
  font-weight: 500 !important;
}

.el-upload input[type="file"] {
  display: none !important;
}

.el-icon-circle-close {
  color: #fff;
}

.el-pagination {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  position: absolute;
  right: 15px;
  bottom: 20px;
}

.el-pagination .el-icon {
  font-size: 15px;
}

.el-pagination .el-pager li {
  min-width: 32px;
  min-height: 32px;
  line-height: 32px;
  padding: 0;
  margin: 0 5px;
  color: #666666;
}

.el-pagination .number:hover {
  background-color: rgba(57, 84, 179, 0.3);
  border-radius: 50%;
}

.el-pagination .el-pager li.active {
  border-radius: 50%;
  background-color: #3954B3;
  color: #fff;
}

.el-upload__input {
  display: none;
}

.el-form-item__label {
  color: #333;
  font-size: 15px;
}

/* switch按钮款式 */
.el-switch__label {
  position: absolute;
  display: none;
  color: #fff !important;
}

/* 调整关闭时文字的显示位子 */
.el-switch__label--left {
  z-index: 1;
}

.el-switch__label--left span {
  margin-left: 20px;
}

/* 调整打开时文字的显示位子 */
.el-switch__label--right span {
  margin-left: 6px;
}

/*显示文字*/
.el-switch__label.is-active {
  display: block;
}

/* 调整按钮的宽度 */
.el-switch .el-switch__core,
.el-switch .el-switch__label {
  width: 56px !important;
  margin: 0;
}

.el-dialog {
  transform: none;
  margin-top: 0 !important;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  position: relative;
  margin: 0 auto;
}

.el-popover {
  min-width: auto;
}

.upload-container .el-upload {
  width: 100%;
}

.upload-container .el-upload .el-upload-dragger {
  width: 100%;
  height: 200px;
}

.el-dropdown-menu a {
  display: block;
}

.el-range-separator {
  box-sizing: content-box;
}

.el-loading-mask {
  border-radius: 8px;
}

.el-button--text {
  color: #3954B3;
}

.list .el-table {
  color: #333;
  font-size: 15px;
}

.list .el-table .el-table__fixed-right::before {
  background-color: #ffffff;
}

.list .el-table .el-table__empty-text {
  border-bottom: 1px solid #ebeef5;
  border-top: 1px solid #ebeef5;
  width: 100%;
  margin-top: 12px;
}

.list .el-table .el-table__body {
  border-collapse: separate;
  border-spacing: 0 15px;
}

.list .el-table ::v-deep table tr {
  height: 55px;
}

.list .el-table .hover-row, .list .el-table .expanded + tr:hover {
  border-radius: 10px !important;
}

.list .el-table .hover-row td, .list .el-table .expanded + tr:hover td {
  background-color: rgba(57, 84, 179, 0.1);
}

.list .el-table td {
  border: 0;
}

.list .el-table tr {
  background-color: #f5f6fa;
}

.list .el-table tr:hover td {
  background-color: rgba(57, 84, 179, 0.1);
}

.list .el-table tr td:first-child {
  border-top-left-radius: 8px;
  border-bottom-left-radius: 8px;
}

.list .el-table tr td:last-child {
  border-top-right-radius: 8px;
  border-bottom-right-radius: 8px;
}

.list .el-table th {
  color: #333;
  font-size: 15px;
  border-bottom: 0;
  font-weight: 500;
  padding: 0;
}

.list .el-table::before {
  height: 0;
}

.el-image {
  display: flex;
  width: 120px;
  height: 70px;
  border-radius: 5px;
}
